<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"    >

    <EditTextPreference
        android:title="@string/pref_location_title"
        android:key="@string/pref_location_key"
        android:defaultValue="@string/default_zip"
        android:inputType="text"
        android:singleLine="true" />

    <ListPreference
        android:title="@string/pref_temp_title"
        android:key="@string/pref_temp_key"
        android:defaultValue="@string/pref_metric_translateable"
        android:entryValues="@array/pref_temp_values"
        android:entries="@array/pref_temp_options" />


</PreferenceScreen>